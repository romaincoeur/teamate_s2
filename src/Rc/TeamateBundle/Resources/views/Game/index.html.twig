{% extends 'RcTeamateBundle::layout.html.twig' %}

{% block body -%}
    <h1>Game list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Starts_at</th>
                <th>Ends_at</th>
                <th>Limitedate</th>
                <th>Is_activated</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Format</th>
                <th>Price</th>
                <th>Reservationmode</th>
                <th>Pitchtype</th>
                <th>Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('game_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.startsat }}</td>
                <td>{{ entity.endsat }}</td>
                <td>{% if entity.limitDate %}{{ entity.limitDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.isactivated }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.format }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.reservationMode }}</td>
                <td>{{ entity.pitchType }}</td>
                <td>{{ entity.level }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('game_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('game_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('game_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
