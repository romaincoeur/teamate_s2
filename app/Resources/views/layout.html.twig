<html>
<head>

    <!-- META -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />


    <title>{% block title %}Teamate{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" media="all"/>
        <link rel="stylesheet" href="{{ asset('css/global.css') }}" type="text/css" media="all"/>
    {% endblock %}

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

    <!-- Google analytics -->

</head>
<body>
<div id="globalwrapper">
    <div id="globalcontainer">

        <header>
            <div class="col-sm-3 col-md-3 head-title">
                <a id="sitename" href="{{ path('teamate_homepage') }}">
                    <img src="{{ asset('img/logo.png') }}" alt="logo">
                </a>
            </div>
            <div class="col-sm-3 col-md-3" style="padding-top: 15px;">
                <input type="text" autocomplete="on" style="background: white url('{{ asset('img/loupe.png') }}') no-repeat 130px center;
                        vertical-align: -webkit-baseline-middle;
                        border: solid #dcdcdc 1px;">
            </div>

            {{ render(controller("TeamateUserBundle:Default:viewModule")) }}
        </header>

        <div class="clearfloat"></div>

        <div class="content">
            {% block body %}
            {% endblock %}
        </div>

        <footer>
            <div class="big-wrap">
                <div class="row">
                    <div id="mentions_legales" class="col-md-4">

                        <a href="#">Mentions légales</a>
                        <br/>
                        <a href="#">Qui sommes-nous ?</a>
                        <br/>
                        <a href="#">Conditions générales d'utilisation</a>

                    </div>

                    <div id="reseaux_sociaux" class="col-md-4">

                        <h3>Suivez nous sur le web</h3>

                        <!--Romain : générer les liens suivez-nous-->

                        <div class="links">

                            <a href="#"><img src="{{ asset('img/facebook.png') }}" alt="suivez-nous sur facebook"/></a>
                            <a href="#"><img src="{{ asset('img/twitter.png') }}" alt="suivez-nous sur twitter"/></a>
                            <a href="#"><img src="{{ asset('img/google+.png') }}" alt="suivez-nous sur google+"/></a>

                        </div>
                    </div>

                    <div id="contact" class="col-md-4">
                        <h3>Contactez-nous</h3>
                        <a href="mailto:contact-fast-foot@gmail.com"><img src="{{ asset('img/mail.png') }}" alt="envoyez un mail"/></a>
                    </div>
                </div>
                <div class="row italic" id="copyright">
                    <p>Copyright 2014-2015 Teamate</p>
                    <h5>FastFoot.com</h5>
                </div>
            </div>
        </footer>

    </div>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalites du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}

</body>
</html>